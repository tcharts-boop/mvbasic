{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2016"],
    "strict": true,
    "outDir": "out",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
