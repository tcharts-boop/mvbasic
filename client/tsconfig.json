{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "server"]
}
